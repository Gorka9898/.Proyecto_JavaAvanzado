		function random_img() {

			var rand = 0;

			for (var j = 0; j <= 27; j++) {

				rand = Math.floor(Math.random() * (portadas.length - 1) + 1);
				console.log(rand);
				rand = portadas[rand];
				console.log(rand);
				document.getElementsByTagName("img")[j].src = 'img/Portadas/'
						+ rand;

			}

		}

		setInterval(random_img, 5000);
