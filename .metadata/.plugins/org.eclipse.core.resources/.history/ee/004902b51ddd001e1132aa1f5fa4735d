	<script>
		window.onload = inicio

		function inicio() {

			const data = null;
			console.log("lo hace");
			var rand = document.getElementById("boton-random");
			rand.addEventListener('click', random);
			console.log("lo hace");
			const xhr = new XMLHttpRequest();
			xhr.withCredentials = true;

			xhr
					.open(
							'GET',
							'https://anime-db.p.rapidapi.com/anime?page=1&size=1111&sortBy=ranking&sortOrder=asc');
			xhr.setRequestHeader('X-RapidAPI-Key',
					'71bba98e70msh76a293c003df868p15bba0jsnb15000a30aa7');
			xhr.setRequestHeader('X-RapidAPI-Host', 'anime-db.p.rapidapi.com');
			xhr.send(data);

			xhr
					.addEventListener('readystatechange',
							function() {
								if (this.readyState === this.DONE) {
									var datos = JSON.parse(this.responseText);
									console.log(datos);

									//Top 11 Animes
									for (var i = 0; i <= 10; i++) {

										var img = datos.data[i].image;
										var titulo = datos.data[i].title;
										var genero = datos.data[i].genres;

										var juntar = "imTop" + i;
										var juntarTitulo = "titleTop" + i;

										var imagenTop = document
												.getElementById(juntar);
										var imagenTopTitulo = document
												.getElementById(juntarTitulo);

										imagenTop.src = img;

										imagenTopTitulo.innerHTML = titulo;
										imagenTopTitulo.innerHTML += "<p>"
												+ genero[0] + "</p>";
										console.log(genero);

									}

									//Imagen random

									var random = Math
											.floor(Math.random() * 1110);

									console.log(random);

									var img = datos.data[random].image;
									var titulo = datos.data[random].title;
									var genero = datos.data[random].genres;

									var imagenTop = document
											.getElementById("imgRandom");

									var imagenTopTitulo = document
											.getElementById("tituloRandom");

									imagenTop.src = img;

									imagenTopTitulo.innerHTML = titulo;
									imagenTopTitulo.innerHTML += "<p>"
											+ genero[0] + "</p>";
									console.log("lo hace");
								}
							});

			function random() {

				console.log("Dentro");

				const data = null;

				const xhr = new XMLHttpRequest();
				xhr.withCredentials = true;

				xhr
						.open(
								'GET',
								'https://anime-db.p.rapidapi.com/anime?page=1&size=1111&sortBy=ranking&sortOrder=asc');
				xhr.setRequestHeader('X-RapidAPI-Key',
						'71bba98e70msh76a293c003df868p15bba0jsnb15000a30aa7');
				xhr.setRequestHeader('X-RapidAPI-Host',
						'anime-db.p.rapidapi.com');
				xhr.send(data);

				xhr.addEventListener('readystatechange',
						function() {
							if (this.readyState === this.DONE) {

								var datos = JSON.parse(this.responseText);
								console.log(datos);

								//Imagen random

								var random = Math.floor(Math.random() * 1110);

								console.log(random);

								var img = datos.data[random].image;
								var titulo = datos.data[random].title;
								var genero = datos.data[random].genres;

								var imagenTop = document
										.getElementById("imgRandom");

								var imagenTopTitulo = document
										.getElementById("tituloRandom");

								imagenTop.src = img;

								imagenTopTitulo.innerHTML = titulo;
								imagenTopTitulo.innerHTML += "<p>" + genero[0]
										+ "</p>";

							}
						});

			}

		}
	</script>



